rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {


    match /users/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.uid;
      allow create;
    }

    match /categories/{category} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.creatorUid;
    }

    match /categories/{category}/quizzes/{quizz} {
      allow create;
      allow read;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.creatorUid;
    }

    match /quizzes/{quizId} {
      allow delete: if request.auth != null && request.auth.uid == resource.data.creatorUid;
    }

  }
}
